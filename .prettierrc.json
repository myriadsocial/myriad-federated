{
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": false,
  "jsxBracketSameLine": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "importOrder": [
    "^react([-a-zA-Z]+)?$",
    "^(next)([-a-zA-Z/]+)?$",
    "^@mui/(.*)$",
    "^@material-ui/(.*)$",
    "^@polkadot/(.*)$",
    "^src/(.*)$",
    "^[-a-zA-Z/]+",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderCaseInsensitive": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
